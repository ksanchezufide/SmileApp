@model SmileApp.Models.Usuario
@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg rounded-4 w-50">
        <div class="card-header bg-warning text-dark text-center rounded-top">
            <h3 class="mb-0 fw-bold">Editar Usuario</h3>
        </div>
        <div class="card-body px-5 py-4">
            <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label fw-semibold">Nombre</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Correo" class="form-label fw-semibold">Correo Electrónico</label>
                    <input asp-for="Correo" class="form-control" type="email" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ContraseñaHash" class="form-label fw-semibold">Contraseña</label>
                    <input asp-for="ContraseñaHash" class="form-control" type="password" />
                    <span asp-validation-for="ContraseñaHash" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RolId" class="form-label fw-semibold">Rol</label>
                    <select asp-for="RolId" asp-items="ViewBag.RolId" class="form-select">
                        <option value="">Seleccione un rol</option>
                    </select>
                    <span asp-validation-for="RolId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-controller="Home" asp-action="Seguridad" class="btn btn-outline-secondary px-4">
                        Cancelar
                    </a>
                    <button type="submit" class="btn btn-warning px-4 text-dark fw-semibold">
                        Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
