@model SmileApp.Models.Paciente

@{
    ViewData["Title"] = "Detalles del Paciente";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-info text-white text-center py-3 rounded-top-4">
                    <h2 class="fw-bold mb-0">Detalles del Paciente</h2>
                </div>
                <div class="card-body p-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-semibold text-muted">@Html.DisplayNameFor(model => model.Nombre)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                        <dt class="col-sm-4 fw-semibold text-muted">@Html.DisplayNameFor(model => model.Apellido)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Apellido)</dd>

                        <dt class="col-sm-4 fw-semibold text-muted">@Html.DisplayNameFor(model => model.FechaNacimiento)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaNacimiento)</dd>

                        <dt class="col-sm-4 fw-semibold text-muted">@Html.DisplayNameFor(model => model.Sexo)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Sexo)</dd>

                        <dt class="col-sm-4 fw-semibold text-muted">@Html.DisplayNameFor(model => model.Telefono)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefono)</dd>

                        <dt class="col-sm-4 fw-semibold text-muted">@Html.DisplayNameFor(model => model.Direccion)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Direccion)</dd>

                        <dt class="col-sm-4 fw-semibold text-muted">@Html.DisplayNameFor(model => model.Correo)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Correo)</dd>

                        <dt class="col-sm-4 fw-semibold text-muted">@Html.DisplayNameFor(model => model.FechaRegistro)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaRegistro)</dd>
                    </dl>
                </div>

                @if (Model.Archivos != null && Model.Archivos.Any())
                {
                    <div class="card-body border-top">
                        <h4 class="mb-3">Archivos Adjuntos</h4>
                        <div class="row">
                            @foreach (var archivo in Model.Archivos)
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card shadow-sm p-2 text-center">
                                        <strong>@archivo.NombreArchivo</strong><br />

                                        @if (archivo.TipoArchivo == "imagen")
                                        {
                                            <img src="@archivo.RutaArchivo" class="img-fluid rounded mt-2" alt="Imagen del paciente" />
                                        }
                                        else
                                        {
                                            <div class="d-flex justify-content-center mt-2">
                                                <a href="@archivo.RutaArchivo" target="_blank" class="btn btn-outline-primary">
                                                    Ver / Descargar documento
                                                </a>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="card-body border-top">
                        <p><em>No hay archivos asociados a este paciente.</em></p>
                    </div>
                }

                <div class="card-footer d-flex justify-content-between px-4 py-3 bg-light rounded-bottom-4">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Volver</a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary rounded-pill px-4">Editar</a>
                </div>
            </div>
        </div>
    </div>
</div>
