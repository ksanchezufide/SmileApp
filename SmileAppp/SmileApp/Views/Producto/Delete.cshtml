@model SmileApp.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-danger text-white text-center py-3 rounded-top-4">
                    <h2 class="fw-bold mb-0">¿Estás seguro de eliminar este producto?</h2>
                </div>
                <div class="card-body p-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-semibold text-muted">Nombre</dt>
                        <dd class="col-sm-8">@Model.Nombre</dd>

                        <dt class="col-sm-4 fw-semibold text-muted">Descripción</dt>
                        <dd class="col-sm-8">@Model.Descripcion</dd>

                        <dt class="col-sm-4 fw-semibold text-muted">Cantidad</dt>
                        <dd class="col-sm-8">@Model.Cantidad</dd>

                        <dt class="col-sm-4 fw-semibold text-muted">Precio</dt>
                        <dd class="col-sm-8">₡@Model.Precio.ToString("N2")</dd>

                        <dt class="col-sm-4 fw-semibold text-muted">Activo</dt>
                        <dd class="col-sm-8">@((Model.Activo) ? "Sí" : "No")</dd>

                        <dt class="col-sm-4 fw-semibold text-muted">Stock Mínimo</dt>
                        <dd class="col-sm-8">@Model.StockMinimo</dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-between px-4 py-3 bg-light rounded-bottom-4">
                    <form asp-action="Delete" class="m-0">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger rounded-pill px-4">Eliminar</button>
                    </form>
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Cancelar</a>
                </div>
            </div>
        </div>
    </div>
</div>
