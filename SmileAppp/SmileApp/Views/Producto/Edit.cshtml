@model SmileApp.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-info text-white text-center py-3 rounded-top-4">
                    <h2 class="fw-bold mb-0">Editar Producto</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label fw-semibold">Nombre</label>
                            <input asp-for="Nombre" class="form-control rounded-pill" />
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label fw-semibold">Descripción</label>
                            <input asp-for="Descripcion" class="form-control rounded-pill" />
                            <span asp-validation-for="Descripcion" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Cantidad" class="form-label fw-semibold">Cantidad</label>
                            <input asp-for="Cantidad" class="form-control rounded-pill" />
                            <span asp-validation-for="Cantidad" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Precio" class="form-label fw-semibold">Precio</label>
                            <input asp-for="Precio" class="form-control rounded-pill" />
                            <span asp-validation-for="Precio" class="text-danger small"></span>
                        </div>

                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" asp-for="Activo" />
                            <label class="form-check-label fw-semibold" asp-for="Activo">Activo</label>
                        </div>

                        <div class="mb-4">
                            <label asp-for="StockMinimo" class="form-label fw-semibold">Stock Mínimo</label>
                            <input asp-for="StockMinimo" class="form-control rounded-pill" />
                            <span asp-validation-for="StockMinimo" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Volver</a>
                            <button type="submit" class="btn btn-success rounded-pill px-4">Guardar Cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
