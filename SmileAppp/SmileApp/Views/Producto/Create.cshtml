@model SmileApp.Models.Producto

@{
    ViewData["Title"] = "Crear Producto";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-success text-white text-center py-3 rounded-top-4">
                    <h2 class="fw-bold mb-0">Agregar Nuevo Producto</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Nombre" class="form-label fw-semibold">Nombre</label>
                            <input asp-for="Nombre" class="form-control rounded-3 shadow-sm" />
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Descripcion" class="form-label fw-semibold">Descripción</label>
                            <input asp-for="Descripcion" class="form-control rounded-3 shadow-sm" />
                            <span asp-validation-for="Descripcion" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Precio" class="form-label fw-semibold">Precio</label>
                            <input asp-for="Precio" class="form-control rounded-3 shadow-sm" />
                            <span asp-validation-for="Precio" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Cantidad" class="form-label fw-semibold">Cantidad</label>
                            <input asp-for="Cantidad" class="form-control rounded-3 shadow-sm" />
                            <span asp-validation-for="Cantidad" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="StockMinimo" class="form-label fw-semibold">Stock Mínimo</label>
                            <input asp-for="StockMinimo" class="form-control rounded-3 shadow-sm" />
                            <span asp-validation-for="StockMinimo" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success rounded-pill px-4">Crear</button>
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
