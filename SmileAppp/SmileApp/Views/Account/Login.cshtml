@{
    Layout = null;
    ViewData["Title"] = "Iniciar Sesión";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clínica Dental</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />

    <!-- CSS personalizado -->
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <div class="container">
        <div class="login-container">
            <div class="card login-card">
                <!-- Efecto de luz animado -->
                <div class="light-effect"></div>

                <div class="login-header">
                    <div class="dental-logo">
                        <i class="fas fa-tooth"></i>
                    </div>
                    <h2>Clínica Dental Sonrisa Perfecta</h2>
                    <p class="mb-0">Sistema de gestión odontológica</p>
                </div>

                <div class="login-body">
                    <form asp-action="Login" method="post">
                        <div class="mb-4">
                            <label for="username" class="form-label">Usuario</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-user"></i>
                                </span>
                                <input type="text" class="form-control" id="username" name="username" placeholder="Ingrese su usuario" required>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="password" class="form-label">Contraseña</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-lock"></i>
                                </span>
                                <input type="password" class="form-control" id="password" name="password" placeholder="Ingrese su contraseña" required>
                                <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>

                        <div class="mb-4 text-end">
                            <a href="#" class="forgot-password">¿Olvidó su contraseña?</a>
                        </div>

                        <button type="submit" class="btn btn-dental btn-block w-100 mb-3">
                            <i class="fas fa-sign-in-alt me-2"></i> Iniciar Sesión
                        </button>

                        @if (ViewData.ModelState[""]?.Errors.Count > 0)
                        {
                            <div class="alert alert-danger">
                                @Html.ValidationSummary(true)
                            </div>
                        }

                        <div class="text-center pt-3">
                            <p class="mb-0">¿No tienes una cuenta? <a href="#" class="forgot-password">Contacta al administrador</a></p>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-4">
                <p class="text-muted small">© @DateTime.Now.Year Clínica Dental Sonrisa Perfecta</p>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/login.js" asp-append-version="true"></script>
</body>
</html>