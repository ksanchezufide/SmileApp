@model SmileApp.Models.LoginViewModel

@{
    Layout = null;
    ViewData["Title"] = "Iniciar Sesión";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clínica Dental Más Sonrisas</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <div class="container">
        <div class="login-container">
            <div class="card login-card">
                <div class="light-effect"></div>

                <div class="login-header">
                    <div class="dental-logo">
                        <img src="~/Imgenes/Board.png" alt="Logo Más Sonrisas" class="img-fluid">
                    </div>
                    <h2>Clínica Dental Más Sonrisas</h2>
                    <p class="mb-0">Sistema de gestión odontológica</p>
                </div>

                <div class="login-body">
                    <form asp-action="Login" method="post">
                        @Html.AntiForgeryToken()
                        <div class="mb-4">
                            <label asp-for="Correo" class="form-label">Correo</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-user"></i>
                                </span>
                                <input asp-for="Correo" class="form-control" placeholder="Ingrese su correo" />
                            </div>
                            <span asp-validation-for="Correo" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Contraseña" class="form-label">Contraseña</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-lock"></i>
                                </span>
                                <input asp-for="Contraseña" class="form-control" placeholder="Ingrese su contraseña" />
                                <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Contraseña" class="text-danger small"></span>
                        </div>

                        <div class="mb-4 text-end">
                            <a href="#" class="forgot-password">¿Olvidó su contraseña?</a>
                        </div>

                        <button type="submit" class="btn btn-dental btn-block w-100 mb-3">
                            <i class="fas fa-sign-in-alt me-2"></i> Iniciar Sesión
                        </button>

                        @if (!string.IsNullOrEmpty(Model?.MensajeError))
                        {
                            <div class="alert alert-danger text-center">
                                @Model.MensajeError
                            </div>
                        }

                        <div class="text-center pt-3">
                            <p class="mb-0">¿No tienes una cuenta? <a href="#" class="forgot-password">Contacta al administrador</a></p>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-4">
                <p class="text-muted small">© @DateTime.Now.Year Clínica Dental Más Sonrisas</p>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/login.js" asp-append-version="true"></script>
</body>
</html>
