@{
    Layout = null;
    ViewData["Title"] = "Registro de Usuario";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clínica Dental Más Sonrisas</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />

    <!-- CSS personalizado -->
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <div class="container">
        <div class="login-container">
            <div class="card login-card">
                <!-- Efecto de luz animado -->
                <div class="light-effect"></div>

                <div class="login-header">
                    <div class="dental-logo">
                        <img src="~/Imgenes/Board.png" alt="Logo Más Sonrisas" class="img-fluid">
                    </div>
                    <h2>Crear Cuenta</h2>
                    <p class="mb-0">Registro de nuevo personal</p>
                </div>

                <div class="login-body">
                    <form>
                        <!-- Solo campos visuales (sin funcionalidad) -->
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label">Nombres</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-user"></i>
                                    </span>
                                    <input type="text" class="form-control" placeholder="Ingrese sus nombres">
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label class="form-label">Apellidos</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-user-tag"></i>
                                    </span>
                                    <input type="text" class="form-control" placeholder="Ingrese sus apellidos">
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Correo Electrónico</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-envelope"></i>
                                </span>
                                <input type="email" class="form-control" placeholder="Ingrese su correo">
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Nombre de Usuario</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-id-card"></i>
                                </span>
                                <input type="text" class="form-control" placeholder="Cree un nombre de usuario">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label">Contraseña</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                    <input type="password" class="form-control" placeholder="Cree una contraseña">
                                    <button class="btn btn-outline-secondary" type="button">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label class="form-label">Confirmar Contraseña</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                    <input type="password" class="form-control" placeholder="Repita la contraseña">
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Rol</label>
                            <select class="form-select">
                                <option selected disabled>Seleccione un rol</option>
                                <option>Dentista</option>
                                <option>Asistente</option>
                                <option>Administrador</option>
                            </select>
                        </div>

                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox">
                            <label class="form-check-label">
                                Acepto los <a href="#" class="forgot-password">términos y condiciones</a>
                            </label>
                        </div>

                        <button type="button" class="btn btn-dental btn-block w-100 mb-3">
                            <i class="fas fa-user-plus me-2"></i> Registrar Usuario
                        </button>

                        <div class="text-center pt-3">
                            <p class="mb-0">¿Ya tienes una cuenta? <a asp-action="Login" class="forgot-password">Inicia sesión aquí</a></p>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-4">
                <p class="text-muted small">© @DateTime.Now.Year Clínica Dental Más Sonrisas</p>
            </div>
        </div>
    </div>

    <!-- Scripts (solo para efectos visuales) -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Solo para el efecto visual de mostrar/ocultar contraseña
        $(document).ready(function () {
            $('[type="button"]').click(function () {
                const input = $(this).closest('.input-group').find('input');
                const icon = $(this).find('i');

                if (input.attr('type') === 'password') {
                    input.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    input.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });
        });
    </script>
</body>
</html>