<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmileApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SmileApp.styles.css" asp-append-version="true" />
    <!-- Agregado Font Awesome para el icono -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-info shadow-sm">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- Módulos a la izquierda -->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Módulos
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="@Url.Action("GestionPacientes", "Home")">Gestión de Pacientes</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("CitasMedicas", "Home")">Citas Médicas</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Inventario", "Home")">Inventario de la Clínica</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Finanzas", "Home")">Finanzas</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Reportes", "Home")">Análisis y Reportes</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Seguridad", "Home")">Seguridad y Acceso</a></li>
                            </ul>
                        </li>
                    </ul>

                    <!-- Logo centrado -->
                    <a class="navbar-brand mx-auto" href="@Url.Action("Index", "Home")">SmileApp</a>

                    <!-- Notificaciones a la derecha -->
                    <ul class="navbar-nav ms-auto">
                        <!-- Icono de notificaciones -->
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="#" id="notificationsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-bell"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-start" aria-labelledby="notificationsDropdown">
                                <li><h6 class="dropdown-header">Notificaciones</h6></li>
                                <li><a class="dropdown-item" href="#"><small class="text-muted">Nueva cita programada para mañana</small></a></li>
                                <li><a class="dropdown-item" href="#"><small class="text-muted">Alerta: Stock bajo de amalgama</small></a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-center" href="#">Ver todas</a></li>
                            </ul>
                        </li>

                        <!-- Icono de usuario -->
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-start" aria-labelledby="userDropdown">
                                <li><h6 class="dropdown-header">Usuario</h6></li>
                                <li><a class="dropdown-item" href="#">Mi perfil</a></li>
                                <li><a class="dropdown-item" href="#">Configuración</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">Cerrar sesión</a></li>
                            </ul>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <!-- Contenido principal -->
    <div class="container flex-grow-1 d-flex flex-column">
        <main role="main" class="pb-3 flex-grow-1">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-info text-white text-center py-3 mt-auto">
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year SmileApp | Todos los derechos reservados.</p>
            <p class="mb-0">
                <a href="@Url.Action("Contacto", "Home")" class="text-white text-decoration-none">Contáctanos</a> |
                <a href="@Url.Action("Privacy", "Home")" class="text-white text-decoration-none">Política de Privacidad</a>
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>