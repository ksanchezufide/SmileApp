@model IEnumerable<SmileApp.Models.Cita>

@{
    ViewData["Title"] = "Lista de Citas";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Listado de Citas</h2>

    <div class="mb-3 text-end">
        <a asp-action="Create" class="btn btn-success rounded-pill px-4">
            <i class="fas fa-plus me-1"></i> Nueva Cita
        </a>
    </div>

    <table class="table table-bordered table-striped table-hover shadow-sm">
        <thead class="table-primary text-center">
            <tr>
                <th>Nombre del Paciente</th>
                <th>Fecha y Hora</th>
                <th>Estado</th>
                <th class="text-center" style="width: 250px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cita in Model)
            {
                <tr>
                    <td>@cita.NombrePaciente</td>
                    <td>@cita.FechaHora.ToString("f")</td>
                    <td>@cita.Estado</td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@cita.Id" class="btn btn-sm btn-info text-white rounded-pill me-2">
                            <i class="fas fa-eye me-1"></i> Ver
                        </a>
                        <a asp-action="Edit" asp-route-id="@cita.Id" class="btn btn-sm btn-warning text-white rounded-pill me-2">
                            <i class="fas fa-edit me-1"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@cita.Id" class="btn btn-sm btn-danger rounded-pill" onclick="return confirm('¿Estás seguro que deseas eliminar esta cita?');">
                            <i class="fas fa-trash-alt me-1"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>