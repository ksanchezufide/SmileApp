@model IEnumerable<SmileApp.Models.Cita>

@{
    ViewData["Title"] = "Citas";

    var buscar = Context.Request.Query["buscar"].ToString().ToLower();
    var estadoFiltro = Context.Request.Query["estado"].ToString().ToLower();

    var citasFiltradas = Model
        .Where(c =>
            (string.IsNullOrEmpty(buscar) ||
                (c.Paciente.Nombre + " " + c.Paciente.Apellido).ToLower().Contains(buscar) ||
                c.Paciente.Cedula.ToLower().Contains(buscar))
            && (string.IsNullOrEmpty(estadoFiltro) || c.Estado.ToString().ToLower() == estadoFiltro)
        )
        .ToList();

    var totalCitas = citasFiltradas.Count();
    var pendientes = citasFiltradas.Count(c => c.Estado.ToString().ToLower() == "pendiente");
    var completadas = citasFiltradas.Count(c => c.Estado.ToString().ToLower() == "completada");
    var canceladas = citasFiltradas.Count(c => c.Estado.ToString().ToLower() == "cancelada");
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<!-- Encabezado -->
<div class="row mb-4 justify-content-center">
    <div class="col-md-10">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white text-center py-4 rounded-top position-relative">
                <h1 class="display-5 fw-bold mb-2">Módulo de Citas</h1>
                <p class="lead mb-0">Gestiona las citas agendadas con los pacientes.</p>
                <i class="bi bi-calendar-event-fill position-absolute top-0 end-0 m-3 fs-3 text-white"></i>
            </div>
        </div>
    </div>
</div>

<!-- Resumen -->
<div class="row mb-4 justify-content-center">
    <div class="col-lg-10">
        <div class="card shadow-sm border-0">
            <div class="card-body text-center">
                <h4 class="card-title fw-semibold mb-4">Resumen General</h4>
                <div class="d-flex justify-content-around flex-wrap gap-3">
                    <div class="card text-white bg-dark shadow-sm" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">Total Citas</h5>
                            <p class="card-text fs-6">@totalCitas registradas</p>
                        </div>
                    </div>
                    <div class="card text-white bg-warning shadow-sm" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">Pendientes</h5>
                            <p class="card-text fs-6">@pendientes citas</p>
                        </div>
                    </div>
                    <div class="card text-white bg-success shadow-sm" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">Completadas</h5>
                            <p class="card-text fs-6">@completadas citas</p>
                        </div>
                    </div>
                    <div class="card text-white bg-danger shadow-sm" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">Canceladas</h5>
                            <p class="card-text fs-6">@canceladas citas</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filtros -->
<div class="row mb-4 justify-content-center">
    <div class="col-lg-10">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <form method="get" asp-action="Index">
                    <div class="row g-3 align-items-end">
                        <div class="col-md-6">
                            <label class="form-label">Buscar por paciente o cédula</label>
                            <input type="text" name="buscar" value="@Context.Request.Query["buscar"]" class="form-control" placeholder="Ej. Juan, Pérez, 302040506" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Estado</label>
                            <select name="estado" class="form-select">
                                <option value="">-- Todos --</option>
                                <option value="pendiente" selected="@(Context.Request.Query["estado"] == "pendiente")">Pendiente</option>
                                <option value="confirmada" selected="@(Context.Request.Query["estado"] == "confirmada")">Confirmada</option>
                                <option value="completada" selected="@(Context.Request.Query["estado"] == "completada")">Completada</option>
                                <option value="cancelada" selected="@(Context.Request.Query["estado"] == "cancelada")">Cancelada</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-funnel-fill me-1"></i> Filtrar
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Botón Agregar -->
<div class="row mb-4 justify-content-end pe-4">
    <div class="col-auto">
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Agendar Cita
        </a>
    </div>
</div>

<!-- Lista de Citas -->
<div class="row justify-content-center">
    @if (!citasFiltradas.Any())
    {
        <div class="col-auto">
            <div class="alert alert-warning shadow-sm text-center">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> No se encontraron citas con los criterios de búsqueda.
            </div>
        </div>
    }
    else
    {
        foreach (var cita in citasFiltradas)
        {
            <div class="col-lg-4 col-md-6 col-sm-8 mb-4 d-flex justify-content-center">
                <div class="card h-100 shadow-sm border-0 rounded-4 w-100" style="max-width: 380px; background-color: #fdfdfd;">
                    <div class="card-body d-flex flex-column p-3">
                        <h5 class="fw-bold text-dark mb-2">
                            @cita.Paciente?.Nombre @cita.Paciente?.Apellido
                        </h5>

                        <p class="text-muted small mb-2"><i class="bi bi-calendar-check me-1"></i>@cita.FechaHora.ToString("dd/MM/yyyy hh:mm tt")</p>
                        <p class="text-muted small mb-2"><i class="bi bi-info-circle me-1"></i>Motivo: @cita.Motivo</p>
                        <p class="text-muted small mb-2"><i class="bi bi-chat-left-text me-1"></i>Obs: @cita.Observaciones</p>
                        <p class="text-muted small mb-2"><i class="bi bi-activity me-1"></i>Estado: <strong>@cita.Estado</strong></p>

                        <div class="mt-auto pt-3 border-top d-flex justify-content-between gap-2">
                            <a asp-action="Edit" asp-route-id="@cita.Id" class="btn btn-sm btn-outline-warning rounded-pill px-3">Editar</a>
                            <a asp-action="Delete" asp-route-id="@cita.Id" class="btn btn-sm btn-outline-danger rounded-pill px-3">Eliminar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
