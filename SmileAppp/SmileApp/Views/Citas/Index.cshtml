@model IEnumerable<SmileApp.Models.Cita>

@{
    ViewData["Title"] = "Gestión de Citas";
}

<div class="container py-4">
    <div class="card border-0 shadow">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="h5 mb-0">
                    <i class="fas fa-calendar-alt me-2"></i> Gestión de Citas
                </h2>
                <a asp-action="Create" class="btn btn-light rounded-pill px-4">
                    <i class="fas fa-plus me-1"></i> Nueva Cita
                </a>
            </div>
        </div>

        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th><i class="fas fa-user me-1"></i> Paciente</th>
                                <th><i class="fas fa-clock me-1"></i> Fecha y Hora</th>
                                <th><i class="fas fa-info-circle me-1"></i> Estado</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cita in Model)
                            {
                                <tr>
                                    <td>@cita.NombrePaciente</td>
                                    <td>@cita.FechaHora.ToString("f")</td>
                                    <td>
                                        <span class="badge @GetEstadoBadgeClass(cita.Estado)">
                                            @cita.Estado
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@cita.Id"
                                               class="btn btn-sm btn-outline-primary rounded-start-pill"
                                               data-bs-toggle="tooltip" title="Ver detalles">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@cita.Id"
                                               class="btn btn-sm btn-outline-warning"
                                               data-bs-toggle="tooltip" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@cita.Id"
                                               class="btn btn-sm btn-outline-danger rounded-end-pill"
                                               onclick="return confirm('¿Estás seguro que deseas eliminar esta cita?');"
                                               data-bs-toggle="tooltip" title="Eliminar">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center py-4">
                    <i class="fas fa-calendar-times fa-2x mb-3"></i>
                    <h4 class="alert-heading">No hay citas registradas</h4>
                    <p>Comienza agregando una nueva cita haciendo clic en el botón "Nueva Cita".</p>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    string GetEstadoBadgeClass(string estado)
    {
        switch (estado.ToLower())
        {
            case "confirmada":
                return "bg-success";
            case "pendiente":
                return "bg-warning text-dark";
            case "cancelada":
                return "bg-danger";
            case "completada":
                return "bg-info";
            default:
                return "bg-secondary";
        }
    }
}

@section Scripts {
    <script>
        // Activar tooltips de Bootstrap
        $(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}