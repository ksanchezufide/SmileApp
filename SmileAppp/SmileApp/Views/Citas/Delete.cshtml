@model SmileApp.Models.Cita

@{
    ViewData["Title"] = "Eliminar Cita";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-danger text-white text-center py-3 rounded-top-4">
                    <h3 class="fw-bold mb-0">Eliminar Cita</h3>
                </div>
                <div class="card-body p-4">

                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        ¿Estás seguro que deseas eliminar esta cita?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Nombre del Paciente:</dt>
                        <dd class="col-sm-8">@Model.NombrePaciente</dd>

                        <dt class="col-sm-4">Fecha y Hora:</dt>
                        <dd class="col-sm-8">@Model.FechaHora.ToString("f")</dd>

                        <dt class="col-sm-4">Motivo:</dt>
                        <dd class="col-sm-8">@Model.Motivo</dd>

                        <dt class="col-sm-4">Estado:</dt>
                        <dd class="col-sm-8">@Model.Estado</dd>
                    </dl>

                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Cancelar</a>
                            <button type="submit" class="btn btn-danger rounded-pill px-4">
                                <i class="fas fa-trash me-1"></i> Eliminar
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>