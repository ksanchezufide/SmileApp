@model SmileApp.Models.Cita

@{
    ViewData["Title"] = "Editar Cita";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded-4">
                <div class="card-header bg-warning text-white text-center py-3 rounded-top-4">
                    <h2 class="fw-bold mb-0">Editar Cita</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-3">
                            <label asp-for="NombrePaciente" class="form-label fw-semibold">Nombre del Paciente</label>
                            <input asp-for="NombrePaciente" class="form-control rounded-3 shadow-sm" />
                            <span asp-validation-for="NombrePaciente" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="FechaHora" class="form-label fw-semibold">Fecha y Hora</label>
                            <input asp-for="FechaHora" type="datetime-local" class="form-control rounded-3 shadow-sm" />
                            <span asp-validation-for="FechaHora" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Motivo" class="form-label fw-semibold">Motivo</label>
                            <textarea asp-for="Motivo" class="form-control rounded-3 shadow-sm"></textarea>
                            <span asp-validation-for="Motivo" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Observaciones" class="form-label fw-semibold">Observaciones</label>
                            <textarea asp-for="Observaciones" class="form-control rounded-3 shadow-sm"></textarea>
                            <span asp-validation-for="Observaciones" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Estado" class="form-label fw-semibold">Estado</label>
                            <select asp-for="Estado" class="form-select rounded-3 shadow-sm">
                                <option value="Pendiente">Pendiente</option>
                                <option value="Confirmada">Confirmada</option>
                                <option value="Cancelada">Cancelada</option>
                                <option value="Finalizada">Finalizada</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Cancelar</a>
                            <button type="submit" class="btn btn-warning text-white rounded-pill px-4">Guardar Cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}