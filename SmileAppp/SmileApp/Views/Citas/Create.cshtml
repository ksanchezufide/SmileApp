@model SmileApp.Models.Cita

@{
    ViewData["Title"] = "Agendar Cita";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
                    <h2 class="fw-bold mb-0">Agendar Nueva Cita</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="FechaHora" class="form-label fw-semibold">Fecha y Hora</label>
                            <input asp-for="FechaHora" type="datetime-local" class="form-control rounded-3 shadow-sm" />
                            <span asp-validation-for="FechaHora" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Motivo" class="form-label fw-semibold">Motivo</label>
                            <input asp-for="Motivo" class="form-control rounded-3 shadow-sm" />
                            <span asp-validation-for="Motivo" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Observaciones" class="form-label fw-semibold">Observaciones</label>
                            <textarea asp-for="Observaciones" class="form-control rounded-3 shadow-sm" rows="3"></textarea>
                            <span asp-validation-for="Observaciones" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Estado" class="form-label fw-semibold">Estado</label>
                            <select asp-for="Estado" class="form-select rounded-3 shadow-sm">
                                <option value="">-- Seleccione --</option>
                                <option value="Pendiente">Pendiente</option>
                                <option value="Confirmada">Confirmada</option>
                                <option value="Completada">Completada</option>
                                <option value="Cancelada">Cancelada</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="PacienteId" class="form-label fw-semibold">Paciente</label>
                            <select asp-for="PacienteId" class="form-select rounded-3 shadow-sm" asp-items="ViewBag.PacienteId">
                                <option value="">-- Seleccione un paciente --</option>
                            </select>
                            <span asp-validation-for="PacienteId" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Cancelar</a>
                            <button type="submit" class="btn btn-primary rounded-pill px-4">Agendar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
