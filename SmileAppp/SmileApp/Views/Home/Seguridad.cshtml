@model IEnumerable<SmileApp.Models.Usuario>
@{
    ViewData["Title"] = "Seguridad y Acceso";
    var filtroActual = Context.Request.Query["filtro"].ToString();
}

<div class="container mt-5">

    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold">Módulo de Seguridad y Acceso</h1>
        <p class="lead">Gestiona los usuarios de la clínica: creación, edición y eliminación.</p>
    </div>

    <!-- Formulario de búsqueda -->
    <form asp-action="Seguridad" method="get" class="mb-4">
        <div class="row justify-content-center">
            <div class="col-md-6 d-flex">
                <input type="text" name="filtro" value="@Context.Request.Query["filtro"]" class="form-control me-2" placeholder="Buscar por nombre o correo" />
                <button type="submit" class="btn btn-primary me-2 form-control" style="max-width: 110px;">Buscar</button>
                <a href="@Url.Action("Seguridad", "Home")" class="btn btn-secondary form-control" style="max-width: 110px;">Limpiar</a>
            </div>
        </div>
    </form>



    <!-- Botón Crear Usuario -->
    <div class="mb-3 text-end">
        <a href="@Url.Action("Create", "Usuarios")" class="btn btn-success">
            <i class="bi bi-person-plus"></i> Crear Usuario
        </a>
    </div>

    <!-- Tabla de usuarios -->
    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title text-center mb-3">Usuarios Registrados</h5>
            <table class="table table-bordered text-center">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Rol</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var usuario in Model)
                        {
                            <tr>
                                <td>@usuario.Id</td>
                                <td>@usuario.Nombre</td>
                                <td>@usuario.Correo</td>
                                <td>@usuario.Rol?.Nombre</td>
                                <td>
                                    <a href="@Url.Action("Edit", "Usuarios", new { id = usuario.Id })" class="btn btn-warning btn-sm me-1">Editar</a>
                                    <form asp-action="Delete" asp-controller="Usuarios" asp-route-id="@usuario.Id" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">No hay usuarios registrados.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
