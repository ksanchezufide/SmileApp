@{
    ViewData["Title"] = "Citas Médicas";
}

<div class="container-fluid">
    <!-- Encabezado del Módulo -->
    <div class="row mb-5 justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white text-center py-4">
                    <h1 class="display-4 fw-bold">Módulo de Citas Médicas</h1>
                    <p class="lead">Aquí podrás gestionar las citas médicas de los pacientes de la clínica.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Resumen de Citas -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Resumen de Citas</h5>
                    <p class="text-muted">En este resumen, puedes ver el estado actual de las citas y las próximas programadas.</p>
                    <div class="d-flex justify-content-around">
                        <div class="card text-white bg-success mb-3" style="max-width: 18rem;">
                            <div class="card-header">Citas Confirmadas</div>
                            <div class="card-body">
                                <h5 class="card-title">5</h5>
                                <p class="card-text">Citas que están confirmadas para los próximos días.</p>
                            </div>
                        </div>
                        <div class="card text-white bg-warning mb-3" style="max-width: 18rem;">
                            <div class="card-header">Citas Pendientes</div>
                            <div class="card-body">
                                <h5 class="card-title">2</h5>
                                <p class="card-text">Citas pendientes por confirmar.</p>
                            </div>
                        </div>
                        <div class="card text-white bg-danger mb-3" style="max-width: 18rem;">
                            <div class="card-header">Citas Canceladas</div>
                            <div class="card-body">
                                <h5 class="card-title">1</h5>
                                <p class="card-text">Citas que han sido canceladas.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12 text-center">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#crearCitaModal">
                Crear Nueva Cita Médica
            </button>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="crearCitaModal" tabindex="-1" aria-labelledby="crearCitaModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content shadow-lg">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="crearCitaModalLabel">Crear Nueva Cita Médica</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="nombrePaciente" class="form-label">Nombre del Paciente</label>
                                <input type="text" class="form-control" id="nombrePaciente" placeholder="Ej. Juan Pérez">
                            </div>
                            <div class="col-md-6">
                                <label for="correoPaciente" class="form-label">Correo Electrónico</label>
                                <input type="email" class="form-control" id="correoPaciente" placeholder="paciente@correo.com">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="fechaCita" class="form-label">Fecha de la Cita</label>
                                <input type="date" class="form-control" id="fechaCita">
                            </div>
                            <div class="col-md-6">
                                <label for="horaCita" class="form-label">Hora de la Cita</label>
                                <input type="time" class="form-control" id="horaCita">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="doctorAsignado" class="form-label">Doctor Asignado</label>
                            <select class="form-select" id="doctorAsignado">
                                <option selected disabled>Seleccione un doctor</option>
                                <option value="Dr. Juan López">Dr. Juan López</option>
                                <option value="Dra. María García">Dra. María García</option>
                                <option value="Dr. Andrés Martínez">Dr. Andrés Martínez</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="motivoCita" class="form-label">Motivo de la Cita</label>
                            <textarea class="form-control" id="motivoCita" rows="3" placeholder="Ej. Dolor de muela, limpieza dental, revisión anual..."></textarea>
                        </div>
                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" id="estadoCita" checked>
                            <label class="form-check-label" for="estadoCita">Cita Activa</label>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-success">Guardar Cita</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Lista de Citas Médicas -->
    <section class="py-5">
        <div class="container">
            <h2 class="text-center mb-4">Lista de Citas Médicas</h2>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>ID de Cita</th>
                        <th>Paciente</th>
                        <th>Fecha</th>
                        <th>Hora</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Aquí irían las citas dinámicamente -->
                    <tr>
                        <td>CIT001</td>
                        <td>Juan Pérez</td>
                        <td>2025-03-25</td>
                        <td>10:00 AM</td>
                        <td><span class="badge bg-success">Confirmada</span></td>
                        <td>
                            <a href="/Citas/Detalles/CIT001" class="btn btn-info btn-sm">Ver Detalles</a>
                            <a href="/Citas/Editar/CIT001" class="btn btn-warning btn-sm">Editar</a>
                            <a href="/Citas/Eliminar/CIT001" class="btn btn-danger btn-sm">Eliminar</a>
                            <a href="/Citas/Notificar/CIT001" class="btn btn-info btn-sm">Notificar</a>
                        </td>
                    </tr>
                    <tr>
                        <td>CIT002</td>
                        <td>Ana Gómez</td>
                        <td>2025-03-26</td>
                        <td>12:30 PM</td>
                        <td><span class="badge bg-warning">Pendiente</span></td>
                        <td>
                            <a href="/Citas/Detalles/CIT002" class="btn btn-info btn-sm">Ver Detalles</a>
                            <a href="/Citas/Editar/CIT002" class="btn btn-warning btn-sm">Editar</a>
                            <a href="/Citas/Eliminar/CIT002" class="btn btn-danger btn-sm">Eliminar</a>
                            <a href="/Citas/Notificar/CIT002" class="btn btn-info btn-sm">Notificar</a>
                        </td>
                    </tr>
                    <tr>
                        <td>CIT003</td>
                        <td>Carlos Martínez</td>
                        <td>2025-03-27</td>
                        <td>03:00 PM</td>
                        <td><span class="badge bg-danger">Cancelada</span></td>
                        <td>
                            <a href="/Citas/Detalles/CIT003" class="btn btn-info btn-sm">Ver Detalles</a>
                            <a href="/Citas/Editar/CIT003" class="btn btn-warning btn-sm">Editar</a>
                            <a href="/Citas/Eliminar/CIT003" class="btn btn-danger btn-sm">Eliminar</a>
                            <a href="/Citas/Notificar/CIT003" class="btn btn-info btn-sm">Notificar</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>

    <!-- Calendario de Citas -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Calendario de Citas</h5>
                    <p class="text-center">Aquí puedes ver todas las citas agendadas para la clínica dental.</p>
                    <div id="calendar" class="calendar-container"></div> <!-- Aquí irá el calendario -->
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Script para Calendario -->
<script>
    // Aquí iría el código para renderizar el calendario (puedes integrar una librería de calendario como FullCalendar.js o similar)
    document.addEventListener('DOMContentLoaded', function () {
        const calendarEl = document.getElementById('calendar');
        // Ejemplo usando FullCalendar.js
        const calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            events: [
                { title: 'Cita con Juan Pérez', start: '2025-03-25T10:00:00' },
                { title: 'Cita con Ana Gómez', start: '2025-03-26T12:30:00' },
                { title: 'Cita con Carlos Martínez', start: '2025-03-27T15:00:00' }
            ]
        });
        calendar.render();
    });
</script>
