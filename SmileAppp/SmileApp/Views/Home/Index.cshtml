@{
    ViewData["Title"] = "Panel de Administración - SmileApp";
}

<div class="container-fluid p-0">
    <!-- Sección de Bienvenida -->
    <header class="bg-info text-white text-center py-5">
        <div class="container">
            <h1 class="display-4">¡Bienvenido a SmileApp!</h1>
            <p class="lead">La plataforma administrativa para gestionar eficientemente la clínica dental.</p>
        </div>
    </header>

    <!-- Notificaciones Importantes -->
    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-4">Notificaciones Importantes</h2>
            <div class="alert alert-warning" role="alert">
                <strong>¡Atención!</strong> Tienes citas médicas programadas para hoy. No olvides verificar las confirmaciones de los pacientes.
            </div>
            <div class="alert alert-success" role="alert">
                <strong>Nuevo Paciente</strong> Se ha registrado un nuevo paciente en el sistema. Revisa su historial.
            </div>
        </div>
    </section>

    <!-- Estadísticas Rápidas -->
    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-4">Estadísticas Rápidas</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="card shadow-lg border-light">
                        <div class="card-body text-center">
                            <h5 class="card-title">Pacientes Activos</h5>
                            <p class="display-4">350</p>
                            <p class="card-text">Número total de pacientes registrados en la clínica.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-lg border-light">
                        <div class="card-body text-center">
                            <h5 class="card-title">Citas Programadas</h5>
                            <p class="display-4">15</p>
                            <p class="card-text">Citas médicas programadas para el día de hoy.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-lg border-light">
                        <div class="card-body text-center">
                            <h5 class="card-title">Productos en Inventario</h5>
                            <p class="display-4">150</p>
                            <p class="card-text">Productos disponibles para su venta o uso en la clínica.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Dashboard de Citas -->
    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-4">Dashboard de Citas Médicas</h2>

            <!-- Resumen de Citas del Día -->
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="card shadow-lg border-light">
                        <div class="card-body">
                            <h5 class="card-title text-center">Citas para Hoy</h5>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Hora</th>
                                            <th>Paciente</th>
                                            <th>Motivo</th>
                                            <th>Estado</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- Aquí irían las citas dinámicas para hoy -->
                                        <tr>
                                            <td>09:00 AM</td>
                                            <td>Juan Pérez</td>
                                            <td>Revisión de dientes</td>
                                            <td><span class="badge bg-success">Confirmada</span></td>
                                        </tr>
                                        <tr>
                                            <td>11:00 AM</td>
                                            <td>Ana Gómez</td>
                                            <td>Limpieza dental</td>
                                            <td><span class="badge bg-warning">Pendiente</span></td>
                                        </tr>
                                        <tr>
                                            <td>02:00 PM</td>
                                            <td>Carlos Martínez</td>
                                            <td>Extracción</td>
                                            <td><span class="badge bg-danger">Cancelada</span></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Gráfico de Citas por Hora -->
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="card shadow-lg border-light">
                        <div class="card-body">
                            <h5 class="card-title text-center">Gráfico de Citas por Hora</h5>
                            <canvas id="citasPorHora" height="200"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Próximas Citas -->
            <div class="row">
                <div class="col-md-12">
                    <div class="card shadow-lg border-light">
                        <div class="card-body">
                            <h5 class="card-title text-center">Próximas Citas</h5>
                            <ul class="list-group">
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>14 de Marzo - 10:00 AM</span>
                                    <span>Mario López</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>14 de Marzo - 12:00 PM</span>
                                    <span>Lucía Rodríguez</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>15 de Marzo - 09:00 AM</span>
                                    <span>Rosa Martínez</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>

    <!-- Panel de Administración -->
    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-4">Panel de Administración</h2>
            <p class="text-center">Accede a las herramientas de gestión para optimizar los procesos en la clínica.</p>
            <div class="row">
                <div class="col-md-4">
                    <div class="card shadow-lg border-light">
                        <div class="card-body text-center">
                            <h5 class="card-title">Gestión de Pacientes</h5>
                            <p class="card-text">Administra el historial y datos de los pacientes.</p>
                            <a href="/Pacientes" class="btn btn-info text-white">Ir a Pacientes</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-lg border-light">
                        <div class="card-body text-center">
                            <h5 class="card-title">Gestión de Citas</h5>
                            <p class="card-text">Programa y organiza las citas médicas.</p>
                            <a href="/Citas" class="btn btn-info text-white">Ir a Citas</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-lg border-light">
                        <div class="card-body text-center">
                            <h5 class="card-title">Inventario</h5>
                            <p class="card-text">Controla los insumos y materiales de la clínica.</p>
                            <a href="/Inventario" class="btn btn-info text-white">Ir a Inventario</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Reportes y Estadísticas -->
    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-4">Reportes y Estadísticas</h2>
            <p class="text-center">Consulta métricas y datos importantes de la clínica.</p>
            <div class="row">
                <div class="col-md-4">
                    <div class="card shadow-lg border-light">
                        <div class="card-body text-center">
                            <h5 class="card-title">Finanzas</h5>
                            <p class="card-text">Monitorea ingresos y gastos de la clínica.</p>
                            <a href="/Finanzas" class="btn btn-info text-white">Ver Finanzas</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-lg border-light">
                        <div class="card-body text-center">
                            <h5 class="card-title">Análisis y Reportes</h5>
                            <p class="card-text">Obtén reportes detallados sobre la clínica.</p>
                            <a href="/Reportes" class="btn btn-info text-white">Ver Reportes</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-lg border-light">
                        <div class="card-body text-center">
                            <h5 class="card-title">Seguridad y Usuarios</h5>
                            <p class="card-text">Gestiona permisos y accesos de los usuarios.</p>
                            <a href="/Seguridad" class="btn btn-info text-white">Administrar Usuarios</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- Script para gráfico de citas -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var ctx = document.getElementById('citasPorHora').getContext('2d');
    var citasPorHoraChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['08:00 AM', '09:00 AM', '10:00 AM', '11:00 AM', '12:00 PM', '01:00 PM', '02:00 PM'],
            datasets: [{
                label: 'Número de Citas',
                data: [1, 3, 2, 1, 2, 1, 1],
                backgroundColor: 'rgba(0, 123, 255, 0.5)',
                borderColor: 'rgba(0, 123, 255, 1)',
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
